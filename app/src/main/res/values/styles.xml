<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ToolbarImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ToolbarTextButton" parent="@android:style/Widget.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/toolbar_text_color</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">@color/deep_gray</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BrowserMinThemeBlack" parent="@style/Base.Theme.AppCompat">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="spinnerButtonStyle">@style/Widget.Yuzu.SpinnerButton</item>
        <item name="android:webViewStyle">@style/Widget.Yuzu.WebView</item>
        <item name="iconColor">@color/white_gray</item>
    </style>

    <style name="BrowserMinThemeBlack.NoTitle" parent="@style/BrowserMinThemeBlack">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BrowserMinThemeBlack.Transparent" parent="BrowserMinThemeBlack.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomThemeBlack" parent="@style/BrowserMinThemeBlack">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="CustomThemeBlack.Pref" parent="CustomThemeBlack">
        <item name="android:textColorPrimary">@color/pref_text_color</item>
    </style>

    <style name="BrowserMinThemeLight" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/light_primary_text</item>
        <item name="android:textColorSecondary">@color/light_secondary_text</item>
        <item name="android:colorControlNormal">@color/light_content_normal</item>
        <item name="android:colorAccent">@color/light_accent</item>
        <item name="colorAccent">@color/light_accent</item>
        <item name="spinnerButtonStyle">@style/Widget.Yuzu.SpinnerButton</item>
        <item name="android:webViewStyle">@style/Widget.Yuzu.WebView</item>
        <item name="iconColor">@color/deep_gray</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>

    <style name="BrowserMinThemeLight.NoTitle" parent="@style/BrowserMinThemeLight">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BrowserMinThemeLight.Transparent" parent="BrowserMinThemeLight.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CustomThemeLight" parent="@style/BrowserMinThemeLight">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary_dark</item>
    </style>

    <style name="CustomThemeLight.Pref" parent="CustomThemeLight">
        <item name="android:textColorPrimary">@color/pref_text_color_light</item>
    </style>

    <style name="Widget.Yuzu.SpinnerButton" parent="Widget.AppCompat.Spinner">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem
        </item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Widget.Yuzu.WebView" parent="@android:style/Widget.WebView">
        <item name="android:scrollbarThumbVertical">@color/scroll_bar</item>
        <item name="android:scrollbarThumbHorizontal">@color/scroll_bar</item>
        <item name="android:scrollbarSize">4dp</item>
    </style>
</resources>